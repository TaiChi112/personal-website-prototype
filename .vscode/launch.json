{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current TS File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ], // ใช้ ts-node รันไฟล์
            "args": [
                "${file}"
            ] // บอกให้รันไฟล์ที่เปิดอยู่ ณ ตอนนั้น
        }
    ]
}